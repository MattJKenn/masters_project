<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mjk.gamifiedlearn280817.SavedQFragment">


    <TextView
        android:id="@+id/savedq_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Saved Questions"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/savedq_title"
        android:layout_centerHorizontal="true"
        android:text="Click on the list to attempt these questions"
        android:textAlignment="center" />

    <ListView
        android:id="@+id/savedq_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/subtitle"
        android:layout_marginTop="24dp"
        android:scrollbars="vertical" />

</RelativeLayout>
