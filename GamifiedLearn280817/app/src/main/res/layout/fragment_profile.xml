<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mjk.gamifiedlearn280817.ProfileFragment"
    android:weightSum="1">

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/user_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/username_textView"
        android:layout_alignLeft="@+id/username_textView"
        android:layout_alignRight="@+id/username_textView"
        android:layout_alignStart="@+id/username_textView"
        android:layout_below="@+id/username_textView"
        android:layout_marginTop="51dp"
        android:contentDescription="User Image Placeholder"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <GridView
        android:id="@+id/badge_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/user_imageView"
        android:layout_marginTop="46dp"
        android:numColumns="auto_fit"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:stretchMode="columnWidth" />

</RelativeLayout>
